

<form class="well">
    <legend>Create Person</legend>

    <label>First Name</label>
    <input type="text" name="first_name" value="{{first}}"/>

    <label>Last Name</label>
    <input type="text" name="last_name" value="{{last}}"/>


    <fieldset class="control-group">
          <label class="control-label" for="prependedInput">Tag</label>
          <div class="controls">
            <div class="input-prepend">
              <span class="add-on">@</span>
              <input class="span3" id="tag" name="tag" size="16" type="text" value="{{tag}}">
            </div>
            <p class="help-block">When entering text, use this to reference this person</p>
          </div>
     </fieldset>

    <label>Email</label>
    <input type="text" name="email" />

    <fieldset class="control-group">
        <label class="control-label">City</label>
        <div class="controls">
            <input type="hidden" name="city" class="input-xxlarge"/>
        </div>
    </fieldset>

    <fieldset class="control-group">
        <label class="control-label">Organization</label>
        <div class="controls">
            <input type="hidden" name="org" class="input-xxlarge"/>
        </div>
    </fieldset>



    <fieldset class="form-actions">
        <button class="btn btn-primary">Create</button>
        <button class="btn cancel">Cancel</button>
    </fieldset>

</form>

