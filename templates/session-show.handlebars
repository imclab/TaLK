

<ul class="breadcrumb">
  <li>
    <a href="#/events">Events</a> <span class="divider">/</span>
  </li>
  <li>
    <a href="#/event/{{event._id}}/sessions">{{event.name}}</a> <span class="divider">/</span>
  </li>
  <li class="active">
    <a href="#/event/{{event._id}}/session/{{session.doc._id}}">{{startTime_formated}}</a>
  </li>
</ul>



<div class="row">

    <div class="span2">
        <div class="recorder"></div>
        <div class="recordingComplete">

        </div>
    </div>

    <div class="span7">


        <h4>Topics</h4>
        <div class="topics disabled">
            {{#each session.doc.agenda.items}}
                <div class="topic" data-id="{{id}}" data-colour="{{colour}}"><i class="icon-tag" style="background-color: #{{colour}}}"></i><span>{{text}}</span></div>
            {{/each}}
        </div>


        <div class="quick-entry well">
            <h4>Quick Entry</h4>


                <textarea class="input-xlarge" name="textarea" id="textarea" rows="3"></textarea>
                <div class="btn-toolbar toggled">
                    <div class="btn-group " data-toggle="buttons-checkbox">
                      <button class="btn"  data-pane="important-point"  title="Important Point"><i class="icon-star"></i></button>
                      <button class="btn pane-toggle" data-pane="action-entry" title="Action Item">
                        <i class="icon-edit"></i>
                      </button>
                      <button class="btn pane-toggle topic-only hide" data-pane="vote-entry" title="Topic Vote">
                        <i class="icon-question-sign"></i>
                      </button>
                      <button class="btn pane-toggle topic-only hide" data-pane="close-topic" title="Close Topic">
                        <i class="icon-off"></i>
                      </button>
                    </div>
                </div>


                <div id="action-entry" class="hide pane">
                  <h6>Action Item</h6>
                  <div class="personAutoComplete">
                   <input type="text" id="action-delegate" name="action-delegate" placeholder="Assigned To" class="input-xlarge"/>
                  </div>
                </div>

                <div id="vote-entry" class="hide pane">
                  <h6>Topic Vote</h6>
                  <i class="icon-arrow-up" title="For"></i>
                  <input type="number" id="vote-for" name="vote-for" placeholder="For" class="input-small"/>
                  <i class="icon-arrow-down" title="Against"></i>
                  <input type="number" id="vote-against" name="vote-against" placeholder="Against" class="input-small"/>
                </div>

                <div id="close-topic"  class="hide pane">
                  <h6>Close Topic</h6>
                  <select name="close-topic-status" id="close-topic-status">
                    <option>Resolved</option>
                    <option>Unresolved</option>
                  </select>
                </div>

                <label class="time"><span class="date-formatted"></span> <span class="time-formatted"></span></label>
                <button class="btn mark-save disabled" disabled="disabled">Save</button>
                <button class="btn mark-cancel disabled" disabled="disabled">Cancel</button>


        </div>

        <div class="transcript" >

        </div>


    </div>
    <div class="span3">
        <h4>Who is speaking?</h4>
        <ul class="participants disabled">
            {{#each session.doc.participants_full}}
               <li class="active disabled" data-topicId="{{doc.tag}}">{{doc.first_name}} {{doc.last_name}}</li>
            {{/each}}

        </ul>
    </div>




</div>




