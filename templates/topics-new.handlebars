<ul class="breadcrumb">
  <li>
    <a href="#/topics">Topics</a> <span class="divider">/</span>
  </li>
  <li class="active">
    <a href="#/topics/new">New</a>
  </li>
</ul>


<form class="well">
    <legend>Create Topic</legend>



    <label>Title</label>
    <input type="text" name="name" value="{{name}}" class="input-xxlarge"/>


    <fieldset class="control-group">
          <label class="control-label" for="prependedInput">Tag</label>
          <div class="controls">
            <div class="input-prepend">
              <span class="add-on">#</span>
              <input class="span3" id="slug" name="slug" size="16" type="text" value="{{slug}}">
            </div>
            <p class="help-block">When entering text, use this to reference this topic</p>
          </div>
     </fieldset>

    <label>Description</label>
    <textarea class="input-xxlarge" rows="3"  name="description"></textarea>


    <fieldset class="form-actions">
        <button class="btn btn-primary">Create</button>
        <button class="btn cancel">Cancel</button>
    </fieldset>

</form>

